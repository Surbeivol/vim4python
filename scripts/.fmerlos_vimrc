execute pathogen#infect() 
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set textwidth=79
set laststatus=2
set hlsearch
au BufNewFile,BufRead *.py
    \  set expandtab
    \| set autoindent
    \| set fileformat=unix
    \| set encoding=utf-8 
    \| set number
" Enable folding (use az to fold unfold)
    \| set foldmethod=indent
    \| set foldlevel=99
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
